{
	"name": "alicialonso-api",
	"version": "2.0.0",
	"description": "AliciAlonso GraphQL API",
	"repository": {
		"type": "git",
		"url": "https://github.com/evelasko/alicialonso-api.git"
	},
	"author": "Enrique Velasco",
	"license": "MIT",
	"main": "./dist/index.js",
	"typings": "./dist/index.d.ts",
	"scripts": {
		"clean": "rm -rf dist && mkdir dist",
		"clear-jest": "jest --clearCache",
		"test": "env-cmd -f ./env/dev.env jest --watchAll",
		"dev": "env-cmd -f ./env/dev.env ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpileOnly ./src",
		"build": "tsc",
		"generate:photon": "yarn -s prisma2 generate",
		"generate:nexus": "env-cmd -f ./env/nexus.env ts-node -r tsconfig-paths/register ./src/schema",
		"generate:codegen": "graphql-codegen --config codegen.yml",
		"postinstall": "yarn -s generate:photon && yarn -s generate:nexus",
		"heroku-postbuild": "npm-run-all generate:*"
	},
	"_moduleAliases": {
		"@constants": "dist/constants/",
		"@helpers": "dist/helpers/",
		"@libs": "dist/libs/",
		"@permissions": "dist/permissions/",
		"@queue": "dist/queue/",
		"@schema": "dist/schema/",
		"@server/*": "dist/server/*",
		"@aatypes": "dist/types/"
	},
	"prettier": {
		"printWidth": 120,
		"tabWidth": 4,
		"singleQuote": true,
		"semi": false,
		"trailingComma": "none"
	},
	"lint-staged": {
		"*.ts": [
			"eslint"
		]
	},
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"bull": "^3.11.0",
		"bull-arena": "^2.6.4",
		"connect-redis": "^4.0.3",
		"cors": "^2.8.5",
		"env-cmd": "^10.0.1",
		"express": "^4.17.1",
		"express-handlebars": "^3.1.0",
		"express-session": "^1.17.0",
		"graphql": "^14.5.8",
		"graphql-middleware": "^4.0.1",
		"graphql-shield": "^7.0.0",
		"graphql-voyager": "^1.0.0-rc.28",
		"graphql-yoga": "^1.18.3",
		"handlebars": "^4.5.1",
		"http-proxy-middleware": "^0.20.0",
		"ioredis": "^4.14.1",
		"jsonwebtoken": "^8.5.1",
		"lodash": "^4.17.15",
		"mailgun-nodemailer-transport": "^1.2.1",
		"module-alias": "^2.2.2",
		"moment": "^2.24.0",
		"nexus": "0.12.0-beta.14",
		"nexus-prisma": "^0.5.0",
		"node-cache": "^5.0.1",
		"node-redsys-api": "^0.0.5",
		"nodemailer": "^6.3.1",
		"redis": "^2.8.0",
		"type-cacheable": "^2.0.0",
		"typescript-rest": "^2.2.2",
		"uuid": "^3.3.3",
		"validator": "^12.0.0",
		"yup": "^0.27.0"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^1.8.2",
		"@graphql-codegen/introspection": "^1.8.2",
		"@graphql-codegen/typescript": "^1.8.2",
		"@graphql-codegen/typescript-document-nodes": "^1.8.2",
		"@graphql-codegen/typescript-graphql-request": "^1.8.2",
		"@graphql-codegen/typescript-operations": "^1.8.2",
		"@types/bcryptjs": "^2.4.2",
		"@types/bull": "^3.10.5",
		"@types/bull-arena": "^2.6.0",
		"@types/connect-redis": "^0.0.11",
		"@types/express-handlebars": "^0.0.33",
		"@types/express-session": "^1.15.15",
		"@types/graphql": "^14.5.0",
		"@types/http-proxy-middleware": "^0.19.3",
		"@types/ioredis": "^4.0.18",
		"@types/jest": "^24.0.21",
		"@types/jsonwebtoken": "^8.3.5",
		"@types/lodash": "^4.14.144",
		"@types/module-alias": "^2.0.0",
		"@types/node": "^12.12.3",
		"@types/node-cache": "^4.1.3",
		"@types/node-fetch": "^2.5.2",
		"@types/nodemailer": "^6.2.2",
		"@types/uuid": "^3.4.6",
		"@types/validator": "^10.11.3",
		"@types/ws": "^6.0.3",
		"@types/yup": "^0.26.24",
		"@typescript-eslint/eslint-plugin": "^2.6.0",
		"@typescript-eslint/parser": "^2.6.0",
		"detect-port": "^1.3.0",
		"eslint": "^6.6.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-import-resolver-typescript": "^2.0.0",
		"eslint-plugin-jest": "^23.0.2",
		"eslint-plugin-json": "^2.0.1",
		"eslint-plugin-prettier": "^3.1.1",
		"graphql-request": "^1.8.2",
		"jest": "^24.9.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.18.2",
		"prisma2": "2.0.0-preview015",
		"ts-jest": "^24.1.0",
		"ts-node": "8.4.1",
		"ts-node-dev": "^1.0.0-pre.43",
		"tsconfig-paths": "^3.9.0",
		"typescript": "3.6.4"
	}
}
